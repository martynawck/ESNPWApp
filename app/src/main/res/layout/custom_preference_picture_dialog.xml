<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/profilePic"
        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:padding="2dp"
        android:src="@drawable/user_ic"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_width="120dp"
            android:text="Take picture"
            android:id="@+id/takePicButton"
            android:background="@color/wallet_highlighted_text_holo_light"
            android:layout_height="30dp" />
        <Button
            android:layout_width="130dp"
            android:layout_marginBottom="10dp"
            android:text="Choose picture"
            android:background="@color/wallet_highlighted_text_holo_light"
            android:id="@+id/choosePicButton"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/takePicButton"
            android:layout_marginLeft="150dp"
            android:layout_alignLeft="@+id/takePicButton" />

    </RelativeLayout>

    <Button
        android:layout_width="130dp"
        android:layout_marginBottom="10dp"
        android:text="UPLOAD"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="@color/wallet_holo_blue_light"
        android:id="@+id/uploadPicButton"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignStart="@+id/takePicButton"
        android:layout_alignLeft="@+id/takePicButton" />




</LinearLayout>